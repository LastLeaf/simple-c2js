{
    "parserOptions": {
        "ecmaVersion": 7,
        "impliedStrict": true,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "node": true,
        "commonjs": true,
        "es6": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "block-scoped-var": 1,
        "comma-dangle": [1, "only-multiline"],
        "curly": [2, "multi-line"],
        "eqeqeq": 2,
        "init-declarations": [1, "always"],
        "no-alert": 1,
        "no-caller": 2,
        "no-console": 0,
        "no-else-return": 2,
        "no-eq-null": 2,
        "no-eval": 1,
        "no-extend-native": 2,
        "no-floating-decimal": 1,
        "no-implied-eval": 1,
        "no-invalid-this": 1,
        "no-loop-func": 2,
        "no-native-reassign": 2,
        "no-octal": 1,
        "no-octal-escape": 2,
        "no-unused-vars": 1,
        "no-useless-escape": 1,
        "no-with": 2,
        "wrap-iife": [2, "inside"]
    }
}